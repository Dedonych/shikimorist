{
  "name": "Shikimorist",
  "short_name": "Shikimorist",
  "version": "1.6.3",
  "description": "Быстрый доступ к списку аниме на Shikimori с поддержкой 10+ порталов онлайн просмотра. Отмечай серии, ставь оценку и добавляй аниме, не покидая сайт.",
  "manifest_version": 3,
  "author": "Kirill Khoroshilov <mr.hokid@gmail.com>",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "declarativeNetRequest",
    "scripting"
  ],
  "host_permissions": [
    "https://shikimori.me/api/*",
    "https://shikimori.me/oauth/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "update_user_agent",
      "enabled": true,
      "path": "update_user_agent.json"
    }]
  },
  "action": {
    "default_popup": "popup.html"
  }
}
